{
  "manifest_version": 2,
  "name": "uNote",
  "version": "2.0.0",
  "description": "__MSG_appDescription__",
  "browser_action": {
    "default_title": "uNote",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "options_page": "settings.html",
  "permissions": ["tabs", "storage", "notifications", "contextMenus"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+M",
        "mac": "Command+M",
        "chromeos": "Ctrl+M",
        "linux": "Ctrl+M"
      }
    }
  },
  "default_locale": "en"
}
